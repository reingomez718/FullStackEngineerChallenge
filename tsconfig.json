{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "api",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*", "app/types/*"],
    }
  },
  "include": ["app/**/*", "api/**/*", "webpack/**/*"]
}